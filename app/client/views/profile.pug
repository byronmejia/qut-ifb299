
extends _app_layout

block content
    h1 My Profile

    if image
      img(src=image width="150" height="150")
      form(method="post" enctype="multipart/form-data" name="upload")
        input(input="input-1" type="file" name="files")
        button(type="submit") Change Profile Picture
    else
      form(method="post" enctype="multipart/form-data" name="upload")
        input(input="input-1" type="file" name="files")
        button(type="submit") Upload Profile Picture

    textarea Simple WYSIWYG Text Editing
    br
    article.card
        h3 My Linked Accounts
        a(href='/auth/link/facebook')
          i.fa.fa-facebook-official.fa-2x(aria-hidden='true')
          |  Link Facebook
        a(href='/auth/link/google')
          i.fa.fa-google.fa-2x(aria-hidden='true')
          |  Link Google
        a(href='/auth/link/github')
          i.fa.fa-github.fa-2x(aria-hidden='true')
          |  Link Github

        h3 Communities I've joined
        a(href="#")
          p Code Network
